    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<style>
	#aa {
        height: 50px; 
        width: 50px; 
        background: red;
        position: relative; /* position 속성을 추가합니다 */
        
    }
    
    #bb {
    	position: absolute;
    	width:50px;
    	height: 50px;
    	background: blue;
    	top:100%;
    }
</style>
<script src="https://code.jquery.com/jquery-latest.js"></script>
<script>
	$(function() {
			$('#btn1').click(function() {
		function animateBox() {
				$('#aa').animate({
					left: "400px"
				}, 3000,function() {
					$('#aa').animate({
						top:"200px"
					},3000,function() {
						$('#aa').animate({
							left:"0px"
						},3000,function() {
							$('#aa').animate({
								top:"0px"
							},3000)
						})
					})
				});
		}
			});			
	});
</script>
</head>
<body>
	<input type="button" id="btn1" value="움직이기">
	<hr>
	<div id="aa"></div>
	<div id="bb"></div>
</body>
